                <div class="form-group col-md-12">
                    <label class="sr-only" for="inlineFormInputGroup">Password</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"> </div>
                        </div>
                        @Html.PasswordFor(u => u.password, new {id="password" ,@class = "form-control", placeholder = "Password" })
                    </div>
                    @Html.ValidationMessageFor(u => u.password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-12">
                    <label class="sr-only" for="inlineFormInputGroup">Password</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"> </div>
                        </div>
                        @Html.PasswordFor(u => u.confirmpassword, new {id= "confirmpassword", @class = "form-control", placeholder = "Re-type Password" })
                    </div>
                    @Html.ValidationMessageFor(u => u.confirmpassword, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-12">
                    <div class="bg-transparent">
                        <a onclick="changepassword()" class="btn btn-primary mb-3">Change password</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</center>

<script>
    function changepassword() {
        var id = window.location.href.slice(window.location.href.indexOf('?') + 1).split('=');
        console.log(id[1]);
        var formdata = new FormData();
        formdata.append("user_id", $("#user_id").val());
        formdata.append("password", $("#password").val());
        formdata.append("confirmpassword", $("#confirmpassword").val())
        $.ajax({
            data: formdata,
            type: 'POST',
            processData: false,
            contentType: false,
            url: '@Url.Action("changepassword", "account")',
            success: function (response) {
                console.log(response);
                if (response.errors.length != 0) {
                    for (err = 0; err < response.errors.length; err++) {
                        document.getElementById('error').innerHTML +=  response.errors[err]
                    }
                }
                else {
                    window.location.href = "@Url.Action("RedirectToLogin", "account")";
                }
            }

        })
    }
</script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
